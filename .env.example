# ========================================
# ENVIRONMENT VARIABLES - EXAMPLE
# ========================================
# Copy this file to .env and configure according to your environment
# 
# AVAILABLE ENVIRONMENTS:
# - dev: For local development
# - prod: For production
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
SERVER_PORT=8080                                    # Port where the API will run

# ========================================
# POSTGRESQL DATABASE CONFIGURATION
# ========================================
SPRING_DATASOURCE_URL=jdbc:postgresql://<host>:<port>/<database>    # PostgreSQL connection URL
SPRING_DATASOURCE_USERNAME=username                # Database user
SPRING_DATASOURCE_PASSWORD=password                # Database password

# ========================================
# MQTT CONFIGURATION
# ========================================
MQTT_BROKER_URL=tcp://<url>:<port>                 # MQTT broker address
MQTT_CLIENT_ID=idsa-client-api                     # Unique MQTT client ID
MQTT_USERNAME=mqtt_user                            # User for MQTT authentication
MQTT_PASSWORD=mqtt_password                        # Password for MQTT authentication
MQTT_TOPIC=mytopic/example                         # MQTT topic to subscribe to
MQTT_QOS=1                                         # Quality of service (0,1,2)

# ========================================
# STORAGE CONFIGURATION
# ========================================
FILE_STORAGE_BASE_PATH=../storage/images           # Base path for file storage

# ========================================
# EMAIL CONFIGURATION
# ========================================
MAIL_HOST=smtp.gmail.com                           # SMTP server host
MAIL_PORT=587                                      # SMTP server port
MAIL_USERNAME=username@gmail.com                   # SMTP username
MAIL_PASSWORD=password                             # SMTP password

# ========================================
# FRONTEND CONFIGURATION
# ========================================
FRONTEND_URL=http://localhost:4200                 # Frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:4200         # Allowed origins for CORS

# ========================================
# JWT CONFIGURATION
# ========================================
# ⚠️ IMPORTANT: Change these keys in production
JWT_ACCESS_TOKEN_SECRET_KEY=jwt_secret_key         # Secret key for signing JWT
JWT_ACCESS_TOKEN_EXPIRATION=60                     # Expiration time in minutes (1h)

JWT_REFRESH_TOKEN_SECRET_KEY=jwt_refresh_secret_key # Secret key for refresh JWT
JWT_REFRESH_TOKEN_EXPIRATION=1440                   # Expiration time in minutes (24h)

JWT_VERIFICATION_SECRET_KEY=verification_secret_key # Key for email verification
JWT_VERIFICATION_EXPIRATION=1440                   # Expiration time in minutes (24h)

JWT_MIN_PREEXPIRY_TIME_TO_RENEW=2                  # Minutes before for early renewal
JWT_MAX_POSTEXPIRY_TIME_TO_RENEW=5                 # Minutes after for renewal (grace)

# ========================================
# ADMINISTRATOR CONFIGURATION
# ========================================
ADMIN_EMAIL=admin@email.com                        # Administrator email
ADMIN_NAME=Admin                                   # Administrator name
ADMIN_FIRST_SURNAME=System                         # First surname
ADMIN_SECOND_SURNAME=User                          # Second surname
ADMIN_PHONE_NUMBER=1234567890                      # Administrator phone number

# ========================================
# MODEL API CONFIGURATION
# ========================================
MODEL_BASE_URL=http://localhost:3000               # Base URL for the ML prediction model API

# ========================================
# REPORT GENERATION CONFIGURATION
# ========================================
REPORT_GENERATION_THRESHOLD=10                     # Minimum biometric data records needed to generate a report